<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view_play_icon"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:srcCompat="@android:drawable/ic_media_play"
        android:layout_marginTop="@dimen/standardMarginHorizontalSpace"
        app:layout_constraintTop_toBottomOf="@+id/text_view_trailer"
        app:layout_constraintBottom_toTopOf="@+id/text_view_trailer"
        android:layout_marginLeft="@dimen/standardMarginHorizontalSpace"
        android:layout_marginStart="@dimen/standardMarginHorizontalSpace"
        />

    <TextView
        android:id="@+id/text_view_trailer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/standardPadding"
        android:textSize="@dimen/textSizeMedium"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/smallMarginVerticalSpace"
        app:layout_constraintLeft_toRightOf="@+id/image_view_play_icon"
        android:layout_marginLeft="@dimen/standardMarginHorizontalSpace"
        android:layout_marginStart="@dimen/standardMarginHorizontalSpace"
        android:layout_marginRight="@dimen/standardMarginHorizontalSpace"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>